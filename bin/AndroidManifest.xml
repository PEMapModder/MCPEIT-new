<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pemapmodder.mcpeit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="pemapmodder.mcpeit.StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pemapmodder.mcpeit.ModMakerFileChooser"
            android:label="@string/title_activity_mod_maker_file_chooser"
            android:parentActivityName="pemapmodder.mcpeit.StartActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pemapmodder.mcpeit.StartActivity" />
        </activity>
        <activity
            android:name="pemapmodder.mcpeit.ModEditorMain"
            android:label="@string/title_activity_mod_editor_main" >
        </activity>
    </application>

</manifest>
